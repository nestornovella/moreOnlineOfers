generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product{
  id String @id @default(uuid()) @db.Uuid
  name String 
  description String?
  categories Category[] @relation("productsCategories")
  parentId String? @db.Uuid 
  parent Product? @relation("productChild",fields: [parentId], references: [id])
  varieties Product[] @relation("productChild")
  price Float
  image String?
  
}

model Category{
  id String @id @default(uuid()) @db.Uuid
  name String
  //relacion con productos
  products Product[] @relation("productsCategories")
  //relacion jerarquica categorias
  parentId String? @db.Uuid
  parent Category? @relation("subCategory", fields: [parentId], references: [id])
  subCategory Category[] @relation("subCategory")
}

model Seller{
  id String @id @default(uuid()) @db.Uuid
  name String 
  porcent Float
}




